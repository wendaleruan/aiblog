---
import { SITE_TITLE, SITE_EMAIL } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
            <div class="email">Email: {SITE_EMAIL}</div>
          </div>

          <div class="item products">
            <div class="item-title">SD开源项目</div>
            <a href="https://github.com/AUTOMATIC1111/stable-diffusion-webui" target="_blank">SD Webui</a>
            <a href="https://github.com/anapnoe/stable-diffusion-webui-ux" target="_blank">SD Webui ux</a>
            <a href="https://github.com/comfyanonymous/ComfyUI" target="_blank">SD ComfyUI</a>
          </div>

          <div class="item starttools">
            <div class="item-title">启动器</div>
            <a href="https://twitter.com/austinit" target="_blank">小丁SD魔法书启动器</a>
            <a href="https://github.com/austin2035" target="_blank">秋葉SDWebui启动器</a>
          </div>
          
          <div class="item resources">
            <div class="item-title">友链</div>
            <a href="https://www.artstation.com/" target="_blank">A站</a>
            <a href="https://bilibili.com" target="_blank">B站</a>
            <a href="https://civitai.com" target="_blank">C站</a>
          </div>

        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`${year} ${SITE_TITLE} ${SITE_NAME}`} 
        </div>
      </div>
    </div>
  </div>
</div>
